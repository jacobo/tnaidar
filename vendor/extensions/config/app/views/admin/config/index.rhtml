<%
form_tag :action => "save"  do
	index = 0
	config.to_hash.each do
		| key, value |
		%>		
		<%= text_field_tag "key[#{index}]", key %> =>
		<%= text_field_tag "value[#{index}]", value %><br/>		
		<%
		index+=1
	end
	%>
	<%= text_field_tag "key[#{index}]", "" %> =>
	<%= text_field_tag "value[#{index}]", "" %><br/>		

	<%=submit_tag 'Save'%>
<%
end
%>

